<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Prime_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/dark_theme</item>
    </style>

    <style name="Prime_fix" parent="Prime_theme">
        <item name="android:colorBackground">@color/dark_theme</item>
    </style>

    <style name="search_button" parent="button_style">
        <item name="icon">@drawable/search_icon_dark_theme</item>
        <item name="buttonIconTint">@color/dark_theme</item>
        <item name="android:textColor">@color/dark_theme</item>
    </style>

    <style name="media_button" parent="button_style">
        <item name="icon">@drawable/media_icon</item>
        <item name="buttonIconTint">@color/dark_theme</item>
        <item name="android:textColor">@color/dark_theme</item>
    </style>

    <style name="settings_button" parent="button_style">
        <item name="icon">@drawable/settings_icon</item>
        <item name="buttonIconTint">@color/dark_theme</item>
        <item name="android:textColor">@color/dark_theme</item>
    </style>

    <style name="settings_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_title">
        <item name="navigationIcon">@drawable/arrow_back_white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="search_edit_text">
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:textColorHint">@color/dark_theme</item>
        <item name="android:drawableTint">@color/dark_theme</item>
    </style>

    <style name="container">
        <item name="android:background">@drawable/rectangle_white</item>
    </style>

    <style name="title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="navigationIcon">@drawable/arrow_back_white</item>
        <item name="android:fontFamily">@font/ys_text</item>
    </style>

    <style name="title_search" parent="title">
        <item name="android:textSize">@dimen/_26sp</item>
    </style>

    <style name="title_settings" parent="title">
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="item_list_card_view">
        <item name="android:backgroundTint">@color/dark_theme</item>
    </style>

    <style name="item_title_text_view">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_items_subtext" parent="search_items">
        <item name="android:fontFamily">@font/ys_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="circle">
        <item name="android:background">@drawable/circle_white</item>
    </style>

    <style name="item_arrow">
        <item name="android:background">@drawable/mark_right_dark_theme</item>
    </style>

    <style name="search_error_draw">
        <item name="android:background">@drawable/not_found_dark_theme</item>
    </style>

    <style name="error_text" parent="general_error_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_error_background">
        <item name="android:background">@color/dark_theme</item>
    </style>

    <style name="internet_error_draw">
        <item name="android:background">@drawable/no_internet_dark_theme</item>
    </style>

    <style name="internet_error_btn" parent="general_internet_error_btn">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_theme</item>
    </style>

    <style name="description_track_left" parent="description_track_general">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="description_track_right" parent="description_track_general">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="audio_player_background">
        <item name="android:background">@color/dark_theme</item>
    </style>

    <style name="title_audio_player">
        <item name="android:navigationIcon">@drawable/arrow_back_white</item>
    </style>

    <style name="player_text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="queue_btn">
        <item name="android:background">@drawable/queue_button_dark</item>
    </style>

    <style name="play_btn">
        <item name="android:background">@drawable/play_button_dark</item>
    </style>

    <style name="favor_btn">
        <item name="android:background">@drawable/favorite_button_dark</item>
    </style>

    <style name="pause_btn">
        <item name="android:background">@drawable/pause_button_dark</item>
    </style>

</resources>