<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_attrs_settings" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="title_attrs_search" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:buttonCornerRadius">@dimen/_16dp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_text</item>
    </style>

    <style name="icon_pos">
        <item name="android:layout_marginRight">@dimen/_12dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="search_items">
        <item name="android:fontFamily">@font/ys_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/some_text</item>
    </style>
    
    <style name="general_error_text" >
        <item name="android:fontFamily">@font/ys_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="general_internet_error_btn" >
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>
    
    <style name="description_track_general">
        <item name="android:textSize">13sp</item>
    </style>


</resources>
